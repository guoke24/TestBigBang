<?xml version="1.0" encoding="utf-8"?>
<!-- android:fillViewport="true" 允许内部组建去填充它-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fenci"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8D9FB8"
    android:fillViewport="true"
    tools:context="com.topwise.testbigbang.FenciActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.topwise.testbigbang.FenciLayout
            android:id="@+id/fenci_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

        </com.topwise.testbigbang.FenciLayout>

    </FrameLayout>

</ScrollView>
